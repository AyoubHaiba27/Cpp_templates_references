#include<stack>

stack<data_type> stack_name;//declear a stack

stack_name.push(var);//pushes var to the top of of the stack
stack_name.pop();//pops the top element of the stack
stack_name.top();//returns the top element in the stack
stack_name.size();//returns the size of the stack
stack_name.empty();//returns either the stack is empty(1) or not(0)
